<?xml version="1.0" encoding="UTF-8"?>
<project name="module_renamezip" default="compile.module.renamezip">
  <dirname property="module.renamezip.basedir" file="${ant.file.module_renamezip}"/>
  
  <property name="module.jdk.home.renamezip" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.renamezip" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.renamezip" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.renamezip" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="renamezip.output.dir" value="${module.renamezip.basedir}/out/production/renameZip"/>
  <property name="renamezip.testoutput.dir" value="${module.renamezip.basedir}/out/test/renameZip"/>
  
  <path id="renamezip.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="renamezip.module.production.classpath">
    <path refid="${module.jdk.classpath.renamezip}"/>
    <path refid="library.org.dom4j:dom4j:2.1.1.classpath"/>
    <path refid="library.jaxen:jaxen:1.2.0.classpath"/>
  </path>
  
  <path id="renamezip.runtime.production.module.classpath">
    <pathelement location="${renamezip.output.dir}"/>
    <path refid="library.org.dom4j:dom4j:2.1.1.classpath"/>
    <path refid="library.jaxen:jaxen:1.2.0.classpath"/>
  </path>
  
  <path id="renamezip.module.classpath">
    <path refid="${module.jdk.classpath.renamezip}"/>
    <pathelement location="${renamezip.output.dir}"/>
    <path refid="library.org.dom4j:dom4j:2.1.1.classpath"/>
    <path refid="library.jaxen:jaxen:1.2.0.classpath"/>
  </path>
  
  <path id="renamezip.runtime.module.classpath">
    <pathelement location="${renamezip.testoutput.dir}"/>
    <pathelement location="${renamezip.output.dir}"/>
    <path refid="library.org.dom4j:dom4j:2.1.1.classpath"/>
    <path refid="library.jaxen:jaxen:1.2.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.renamezip">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.renamezip">
    <patternset refid="excluded.from.module.renamezip"/>
  </patternset>
  
  <path id="renamezip.module.sourcepath">
    <dirset dir="${module.renamezip.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.renamezip" depends="compile.module.renamezip.production,compile.module.renamezip.tests" description="Compile module renameZip"/>
  
  <target name="compile.module.renamezip.production" depends="register.custom.compilers" description="Compile module renameZip; production classes">
    <mkdir dir="${renamezip.output.dir}"/>
    <javac2 destdir="${renamezip.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.renamezip}/javac">
      <compilerarg line="${compiler.args.renamezip}"/>
      <bootclasspath refid="renamezip.module.bootclasspath"/>
      <classpath refid="renamezip.module.production.classpath"/>
      <src refid="renamezip.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.renamezip"/>
    </javac2>
    
    <copy todir="${renamezip.output.dir}">
      <fileset dir="${module.renamezip.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.renamezip.tests" depends="register.custom.compilers,compile.module.renamezip.production" description="compile module renameZip; test classes" unless="skip.tests"/>
  
  <target name="clean.module.renamezip" description="cleanup module">
    <delete dir="${renamezip.output.dir}"/>
    <delete dir="${renamezip.testoutput.dir}"/>
  </target>
</project>